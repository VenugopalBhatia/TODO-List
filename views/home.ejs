<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="./css/home.css">
    </head>
    <body>
        <!-- create sections for reminders, to do checklists and sticky notes -->
        <header>
            <h2 id = "Heading"> TODO APP </h2>
        </header>
        <div id = "userInp">
            <form action="/add-task" method = "POST">
                <div id = "descInput">
                   
                    <input type="text" name="description" id="description" placeholder = "Description">
                </div>
                
                <div id = "graphicalInput">
                    <select name="category" id="category">
                        <option value="Home">Home</option>
                        <option value="Work">Work</option>
                        <option value="Personal">Personal</option>
                        <option value="School">School</option>
                        <option value="Other">Other</option>
                    </select>
                    <input type="date" name ="deadline" id = "deadline">
                </div>

                <div id = "actionButtons">
                    <input type = "submit" id = "addTask" value = "ADD">
                    <button id= "deleteTask" type = "button" value = "DELETE"> DELETE </button>
                </div>
                    
                
                
                
                

            </form>
            
        </div>
        <div id = "checklist">
            <ul>
                <% for(let i of checklist) { %>
                    <li>
                        <div id = "S1" class = "Section">
                            <p id = "checkbox"> <input type = "checkbox" id = "<%= i._id %>" name = "taskStatus">
                            </p>
                        </div>
                        <div id = "S2" class = "Section">
                            <p id = "description"><%= i.description %></p>
                            <p id = "deadline">
                                <% if(i.deadline){ %>
                                    <%= i.deadline.toDateString() %>
                                <%}else{%>
                                    NO DEADLINE
                                <%}%>
                            </p>
                        </div>
                        <div id = "S3" class = "Section">
                            <p id = "category"><%= i.category %></p>
                        </div>
                        
                    </li>
                <% } %>
            </ul>
            

        </div>
        <script
            src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
            crossorigin="anonymous">
        </script>
        <script type="text/javascript" src="./js/home.js"></script>
    </body>

</html>